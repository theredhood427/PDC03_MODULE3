<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDC03_MODULE3.activity3">
    <ContentPage.Content>
        <StackLayout>
            <AbsoluteLayout Padding="20" VerticalOptions="CenterAndExpand">
                <Entry AbsoluteLayout.LayoutBounds="0, 40, 1 ,40"
                       AbsoluteLayout.LayoutFlags="XProportional,WidthProportional"
                    Placeholder="Username" HorizontalOptions="FillAndExpand"/>

                <Entry AbsoluteLayout.LayoutBounds="0, 100, 1 ,40"
                       AbsoluteLayout.LayoutFlags="XProportional,WidthProportional"
                    Placeholder="Password" HorizontalOptions="FillAndExpand"/>


                <Button  AbsoluteLayout.LayoutBounds="0,160,1,40"
                         AbsoluteLayout.LayoutFlags="XProportional,WidthProportional"
                    Text="Sign-in" HorizontalOptions="FillAndExpand"/>

            </AbsoluteLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>